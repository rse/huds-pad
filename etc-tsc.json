{
    "compilerOptions": {
        "target":                  "ESNext",
        "useDefineForClassFields": true,
        "module":                  "ESNext",
        "moduleResolution":        "Node",
        "strict":                  true,
        "jsx":                     "preserve",
        "resolveJsonModule":       true,
        "isolatedModules":         true,
        "esModuleInterop":         true,
        "lib":                     [ "ESNext", "DOM" ],
        "skipLibCheck":            true,
        "noEmit":                  true,
        "types":                   [ "vite/client" ]
    },
    "include":    [ "*.ts", "*.d.ts", "*.vue" ],
    "references": [ { "path": "./etc-tsc.node.json" } ]
}
